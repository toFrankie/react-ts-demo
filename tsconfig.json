{
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsx": "react",
    "target": "esnext",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "include": ["src"]
  }
}
